{% extends 'base.html.twig' %}

{% block title %}Hello VideoController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
                .moreLink {
            border-radius:8px;
            background-color: transparent;
			border: 1px solid #000;
            color: #000;
            text-decoration: none;
            padding: 5px 10px;
            transition: all 0.3s ease;
        }

        .moreLink:hover {
            background-color: #111;
            color: #fff;
        }

        .appTitle {
			color: #f00;

		}
	</style>

	<div class="example-wrapper">
        <a href="/" class="moreLink">Retour Ã  <span class="appTitle">l'acceuil</span></a>
		<h1>{{video.name}}</h1>
		<p class="videoType">{{ video.type }}</p>
		<p class="videoSynopsis">{{ video.synopsis }}</p>
		<p class="videoCreatedAt">{{ video.getCreatedAt()|date('Y-m-d') }}</p>

	{% endblock %}
